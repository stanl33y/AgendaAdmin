@model Agenda3.Admin.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
}
@section Scripts {
    <script src="/bower_components/angular/angular.min.js"></script>
    <script>
        (function (window, undefined) {
            angular.module('login', []).controller('ForgotPasswordCtrl', function ($timeout) {
                $public = this;
            });
        })(window);
    </script>
}
<div class="container" data-ng-app="login" data-ng-controller="ForgotPasswordCtrl as ctrl">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
            <div class="well well-shadow">
                <form action="@Url.Action("ForgotPassword", "Account")" method="post" name="form" role="form" novalidate autocomplete="off" data-ng-submit="ctrl.Loading = true">
                    @Html.AntiForgeryToken()
                    <h2>Esqueceu sua senha?</h2>
                    <p>Preencha os campos abaixo para recuperar</p>
                    <div class="form-group" data-ng-class="{'has-error': form.Email.$dirty && form.Email.$invalid }">
                        <label for="Email" class="sr-only">Email</label>
                        <div class="input-group">
                            <div class="input-group-addon"><i class="fa fa-fw fa-envelope"></i></div>
                            <input type="email" data-ng-model="ctrl.Email" id="Email" name="Email" class="form-control" placeholder="Email" required autofocus>
                        </div>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit" data-ng-disabled="form.$pristine || form.$invalid || ctrl.Loading">
                        <span data-ng-hide="ctrl.Loading">Enviar <i class="fa fa-sign-in"></i></span>
                        <span data-ng-show="ctrl.Loading"><i class="fa fa-spin fa-refresh"></i></span>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>