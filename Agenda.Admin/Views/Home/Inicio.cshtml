@model IEnumerable<Agenda3.Admin.Domain.Login.Menu>
<div class="container">

    <div class="row">
        @foreach (var item in Model.OrderBy(p => p.Descricao))
        {
            <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 text-center favoritos">
                <a class="thumbnail" href="@item.Url">
                    <i class="fa fa-3x @item.Icone"></i><br />@item.Descricao
                </a>
            </div>
        }

        <div class="col-xs-6 col-sm-4 col-md-3 col-lg-2 text-center favoritos">
            <a class="thumbnail" href="#/Favoritos">
                <i class="fa fa-3x fa-star"></i><br />Adicionar Favorito
            </a>
        </div>
    </div>
</div>